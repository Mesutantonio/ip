<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="conversal.ui.MainWindowController">
    <children>
        <ScrollPane fx:id="scrollPane" fitToWidth="true"
                    AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
                    AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="50">
            <content>
                <VBox fx:id="dialogContainer" spacing="8">
                    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
                </VBox>
            </content>
        </ScrollPane>

        <HBox spacing="8" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">
            <padding><Insets top="8" right="10" bottom="8" left="10"/></padding>
            <TextField fx:id="userInput" HBox.hgrow="ALWAYS" promptText="Type a message..."/>
            <Button text="Send" onAction="#handleUserInput"/>
        </HBox>
    </children>
</AnchorPane>
